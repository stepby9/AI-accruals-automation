# NetSuite API Credentials (for REST API calls)
NETSUITE_ACCOUNT_ID=your_account_id
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret

# NetSuite RPA Configuration (for browser automation file downloads)
NETSUITE_OKTA_URL=https://your-company.okta.com/home/netsuite/xxx/xxx
NETSUITE_RPA_HEADLESS=true
NETSUITE_USE_RPA_DOWNLOADS=true

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Snowflake Database
SNOWFLAKE_ACCOUNT=your_snowflake_account
SNOWFLAKE_USER=your_snowflake_user
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_DATABASE=your_snowflake_database
SNOWFLAKE_SCHEMA=your_snowflake_schema
SNOWFLAKE_WAREHOUSE=your_snowflake_warehouse

# Google Sheets API
GOOGLE_SERVICE_ACCOUNT_KEY=path_to_service_account_json
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Application Settings
LOG_LEVEL=INFO
MAX_WORKERS=4
BATCH_SIZE=50
MIN_ACCRUAL_AMOUNT_USD=5000

# Invoice Storage Location (optional - defaults to local data/invoices folder)
# INVOICES_DIR=G:\.shortcut-targets-by-id\YOUR_ID\FP&A Internal\Automation\Accruals\Bills